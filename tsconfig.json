{
  "compilerOptions": {
    "outDir": "lib",
    "declarationDir": "types",
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
